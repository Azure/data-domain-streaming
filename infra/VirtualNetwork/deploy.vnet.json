{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "location": {
            "type": "string",
            "defaultValue": "[resourceGroup().location]",
            "metadata": {
                "description": "Specifies the location for all resources."
            }
        },
        "vnetName": {
            "type": "string",
            "metadata": {
                "description": "Specifies the name of the vnet that gets created."
            }
        },
        "deployDatabricksNsg": {
            "type": "bool",
            "defaultValue": false,
            "metadata": {
                "description": "Specifies whether the databricks NSG should be deployed."
            }
        }
    },
    "functions": [],
    "variables": {
        "location": "[parameters('location')]",
        "vnetName": "[parameters('vnetName')]",
        "deployDatabricksNsg": "[parameters('deployDatabricksNsg')]"
    },
    "resources": [
        {
            "name": "dn002-nsg",
            "type": "Microsoft.Network/networkSecurityGroups",
            "apiVersion": "2020-05-01",
            "location": "[variables('location')]",
            "properties": {
                "securityRules": [
                ]
            }
        },
        {
            "condition": "[variables('deployDatabricksNsg')]",
            "name": "dn002-databricks-nsg",
            "type": "Microsoft.Network/networkSecurityGroups",
            "apiVersion": "2020-05-01",
            "location": "[variables('location')]",
            "properties": {
                "securityRules": [
                ]
            }
        },
        {
            "name": "[variables('vnetName')]",
            "type": "Microsoft.Network/virtualNetworks",
            "apiVersion": "2020-05-01",
            "location": "[variables('location')]",
            "dependsOn": [
                "[resourceId('Microsoft.Network/networkSecurityGroups', 'dn002-nsg')]",
                "[resourceId('Microsoft.Network/networkSecurityGroups', 'dn002-databricks-nsg')]"
            ],
            "properties": {
                "addressSpace": {
                    "addressPrefixes": [
                        "10.2.0.0/16"
                    ]
                },
                "subnets": [
                    {
                        "name": "dn002-subnet",
                        "properties": {
                            "addressPrefix": "10.2.0.0/24",
                            "privateEndpointNetworkPolicies": "Enabled",
                            "privateLinkServiceNetworkPolicies": "Enabled",
                            "networkSecurityGroup": {
                                "id": "[resourceId('Microsoft.Network/networkSecurityGroups', 'dn002-nsg')]"
                            }
                        }
                    },
                    {
                        "name": "dn002-privatelink-subnet",
                        "properties": {
                            "addressPrefix": "10.2.1.0/24",
                            "privateEndpointNetworkPolicies": "Disabled",
                            "privateLinkServiceNetworkPolicies": "Disabled"
                        }
                    },
                    {
                        "name": "dn002-databricks-public-subnet",
                        "properties": {
                            "addressPrefix": "10.2.2.0/24",
                            "privateEndpointNetworkPolicies": "Enabled",
                            "privateLinkServiceNetworkPolicies": "Enabled",
                            "networkSecurityGroup": {
                                "id": "[resourceId('Microsoft.Network/networkSecurityGroups', 'dn002-databricks-nsg')]"
                            },
                            "delegations": [
                                {
                                    "name": "databricks-delegation-public",
                                    "properties": {
                                        "serviceName": "Microsoft.Databricks/workspaces"
                                    }
                                }
                            ]
                        }
                    },
                    {
                        "name": "dn002-databricks-private-subnet",
                        "properties": {
                            "addressPrefix": "10.2.3.0/24",
                            "privateEndpointNetworkPolicies": "Enabled",
                            "privateLinkServiceNetworkPolicies": "Enabled",
                            "networkSecurityGroup": {
                                "id": "[resourceId('Microsoft.Network/networkSecurityGroups', 'dn002-databricks-nsg')]"
                            },
                            "delegations": [
                                {
                                    "name": "databricks-delegation-private",
                                    "properties": {
                                        "serviceName": "Microsoft.Databricks/workspaces"
                                    }
                                }
                            ]
                        }
                    }
                ]
            }
        }
    ],
    "outputs": {}
}